/*******************************************************/
/************************ MENU *************************/
/*******************************************************/
header {
	
	img {
		display: none;
	}
	
	.menu {
		background: white;
		width: 100%;
		
		button {
			background: white;
			left: 5px;
		}
		
		.main-menu {
			background: white;
			z-index: -1;
			
			ul {
				border-top: 1px solid black;
				margin-top: 0px;
				margin-bottom: 0px;
				padding-left: 0px;
				
				
				li {
					padding: 10px 15px 10px 15px;
					display: block;
				}
			}
		}
	}
}
/*******************************************************/
/************************ SHOP *************************/
/*******************************************************/
.shop {
	//style, index.php (shopen)
	.items {
		width: 80%;
		
		ul {
			.item {
				float: left;
				margin: 1%;
				width: 31%;
			}
		}
	}

	//style, single-item.php (sida d√§r en produkt visas)
	.item-show {
		width: 80%;
		
		.item-image {
			padding-top: 2em;
			text-align: center;
			
			img {
				width: 80%;
			}
		}

		.item-info {
			margin: 0 auto;
			padding: 1% 5%; 
			width: 80%;

			.price {
				margin-top: 0.8em;
			}

			button {
				margin-top: 1em;
				margin-left: 0;
			}
			
			.social-share {
				.social-icon {
					display: inline-block;
					margin: 10px 0;
					width: 24%;
				}
			}			
		}
	}
}
/*******************************************************/
/********************** VARUKORG ***********************/
/*******************************************************/
#shopping-cart {

	h2 {
		width: 70vw;
		margin-top: 0;
		text-transform: uppercase;
	}
	
	.shopping-cart-item {

		img {
			width: 100px;
			height: 100px;
		}
	}
}
/*******************************************************/
/*********************** FOOTER ************************/
/*******************************************************/
footer {
	height: 18em;

	.contact, .about {
		float: left;
		margin-left: 3em;
	}

	img {
		margin-left: 3em;
		margin-top: 2em;
	}
}

/*******************************************************/
/******************* LINKS IN FOOTER *******************/
/*******************************************************/
.wrapper {
	padding-top: 6em;
	
	.content {
		padding: 2% 5%;
		width: 80%;

		fieldset {
			input, textarea, select {
				width: 70%;
			}
		}
	}
}